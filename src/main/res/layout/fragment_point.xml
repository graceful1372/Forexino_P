<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analeys.journal.point.PointFragment">

    <!--Back-->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_margin="@dimen/_10mdp"
        android:background="@drawable/bg_back_button"
        android:padding="@dimen/_10mdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--Title-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_16mdp"
        android:text="@string/point"
        app:layout_constraintBottom_toBottomOf="@id/backBtn"
        android:textSize="@dimen/_16font_mdp"
        android:textStyle="bold"
        android:textColor="@color/white"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/openAddPointBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="@dimen/_16mdp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/crayola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_point_frg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        tools:listitem="@layout/item_list_point" />

</androidx.constraintlayout.widget.ConstraintLayout>