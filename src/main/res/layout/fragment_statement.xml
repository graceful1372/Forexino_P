<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analeys.journal.statement.StatementFragment">

    <!--Toolbar-->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/ToolbarStatement"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/grayDark"
        android:elevation="5dp"
        android:theme="@style/MyThemeOverlay_Toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/menu_statement"
        app:title=" "
        app:titleCentered="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ToolbarStatement">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--calendar-->
            <CalendarView
                android:id="@+id/calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dateTextAppearance="@style/CalendarDateTextAppearance"
                android:weekDayTextAppearance="@style/CalendarDateTextAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--chart-->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_calendar"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="8dp"

                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/calendar"
                tools:layout_editor_absoluteX="0dp" />

            <!--show list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCalendar"
                android:layout_width="match_parent"
                android:layout_height="500dp"


                app:layout_constraintTop_toBottomOf="@id/chart_calendar" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>