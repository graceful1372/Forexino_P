<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70mdp"
    android:layout_marginHorizontal="@dimen/_10mdp"
    android:layout_marginTop="@dimen/_5mdp"
    android:elevation="@dimen/_3mdp"
    app:cardCornerRadius="@dimen/_10mdp">
    <!--Main container-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#394840">
        <!--Image currency-->
        <ImageView
            android:id="@+id/currencyImg"
            android:layout_width="@dimen/_25mdp"
            android:layout_height="@dimen/_25mdp"
            android:layout_marginStart="@dimen/_10mdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_audcad" />
        <!--Symbol  currency-->
        <TextView
            android:id="@+id/symbolCurrencyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30mdp"
            android:layout_marginTop="@dimen/mines10mdp"
            android:textColor="@color/Cultured"
            android:textSize="@dimen/_14font_mdp"
            app:layout_constraintStart_toEndOf="@id/currencyImg"
            app:layout_constraintTop_toTopOf="@id/currencyImg"
            tools:text="BTC" />
        <!--Name  currency-->
        <TextView
            android:id="@+id/nameCurrencyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6mdp"
            android:textColor="@color/Cultured"
            android:textSize="@dimen/_7font_mdp"
            app:layout_constraintEnd_toEndOf="@+id/symbolCurrencyTxt"
            app:layout_constraintStart_toStartOf="@id/symbolCurrencyTxt"
            app:layout_constraintTop_toBottomOf="@id/symbolCurrencyTxt"
            tools:text="Bitcoin" />
        <!--Image show status-->
        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@id/enterPriceTxt"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_20mdp"
            app:layout_constraintStart_toEndOf="@id/symbolCurrencyTxt"
            app:layout_constraintTop_toTopOf="parent" />
        <!--Show enter price-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/enterPriceTxt"
            android:textColor="@color/Cultured"
            app:layout_constraintTop_toTopOf="@id/symbolCurrencyTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_25mdp"
            tools:text="$2" />
        <!--Show profit -->
        <TextView
            android:id="@+id/profitTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10mdp"
            android:textColor="@color/Cultured"
            app:layout_constraintEnd_toEndOf="@id/enterPriceTxt"
            app:layout_constraintStart_toStartOf="@+id/enterPriceTxt"
            app:layout_constraintTop_toBottomOf="@id/enterPriceTxt"
            tools:text="+12.2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>