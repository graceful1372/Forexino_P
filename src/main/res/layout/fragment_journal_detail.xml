<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analeys.journal.journal_detail.JournalDetailFragment">

    <!--image-->
    <ImageView

        android:id="@+id/imageViewDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200mdp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Image slide show-->
    <!--  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/imgRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_200mdp"
          app:layout_constraintTop_toTopOf="parent"/>-->

    <!--Button delete-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/Cultured"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageViewDetail">


        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete" />


    </androidx.cardview.widget.CardView>
    <!--Button edit-->
    <androidx.cardview.widget.CardView
        android:id="@+id/addImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="@color/Cultured"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="@id/card_image"
        app:layout_constraintTop_toBottomOf="@id/card_image">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/ic_edit" />


    </androidx.cardview.widget.CardView>
    <!--Text description-->
    <ScrollView

        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_scroll_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewDetail">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">
            <!--Description-->
            <TextView
                android:id="@+id/description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="16dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <TextView

        android:id="@+id/showTypeTxt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:textColor="@color/philippineSilverAlpha"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/scrollable"
        app:layout_constraintTop_toTopOf="@id/scrollable" />

    <TextView

        android:id="@+id/showTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:textColor="@color/philippineSilverAlpha"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/scrollable"
        app:layout_constraintEnd_toEndOf="@id/scrollable"
        app:layout_constraintStart_toStartOf="@id/scrollable"
        tools:text="2022-12-10 12:30" />


</androidx.constraintlayout.widget.ConstraintLayout>