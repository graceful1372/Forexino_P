<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.signals.detail_signal.DetailSignalFragment">
    <!--Scroll-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Container-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--Back-->
            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_35mdp"
                android:layout_height="@dimen/_35mdp"
                android:layout_margin="@dimen/_10mdp"
                android:background="@drawable/bg_back_button"
                android:padding="@dimen/_11mdp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />
            <!--Image signal-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="@dimen/_200mdp"

                android:layout_marginHorizontal="@dimen/_30mdp"
                android:layout_marginTop="@dimen/_10mdp"
                app:cardCornerRadius="@dimen/_10mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backBtn">

                <ImageView
                    android:id="@+id/signalImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.cardview.widget.CardView>
            <!--Linear main-->
            <LinearLayout
                android:id="@+id/linearLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@id/cardView"
                app:layout_constraintStart_toStartOf="@id/cardView"
                app:layout_constraintTop_toBottomOf="@id/cardView">
                <!--Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="@string/name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/nameCurrencyTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="AUCAD" />

                </LinearLayout>
                <!--Spot trade-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="Spot trade : "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/spotTradeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="5" />

                </LinearLayout>
                <!--Price enter-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="Price enter : "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/priceEnterTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="10" />

                </LinearLayout>
                <!--Take profit 1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="TP 1  : "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/tp1Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="20" />

                </LinearLayout>
                <!--Take profit 2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="Tp 2 : "
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/tp2Txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="10" />

                </LinearLayout>
                <!--Stop loss-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30mdp"
                    android:layout_marginTop="@dimen/_10mdp"
                    android:background="@drawable/bg_linear_layout_detail_signal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cardView">

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        android:text="Stop loss :"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cardView" />

                    <TextView
                        android:id="@+id/stopLossTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5mdp"
                        tools:text="20" />

                </LinearLayout>

            </LinearLayout>
            <!--Test image-->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>