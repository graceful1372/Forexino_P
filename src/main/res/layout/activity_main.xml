<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayDark"
    tools:context=".ui.MainActivity">


    <!--navHost-->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_nav" />
    <!--Bottom nav-->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_50mdp"
        android:layout_marginBottom="@dimen/_10mdp"
        android:layout_marginHorizontal="@dimen/_15mdp"
        android:background="@drawable/bg_bottom_navigation"
        app:itemIconTint="@color/item_bottom_nav"
        app:itemRippleColor="@color/greenLight"
        app:itemTextColor="@color/greenLight"
        app:labelVisibilityMode="selected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bottom_nav_main" />

    <!--    &lt;!&ndash;Bottom nav mylist&ndash;&gt;
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavMyList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/menu_bottom_nav_my_list" />-->

</androidx.constraintlayout.widget.ConstraintLayout>