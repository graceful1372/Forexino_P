<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10mdp"
    android:elevation="3dp"
    app:cardCornerRadius="@dimen/_8mdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D1F1E"
        >
        <!--Date-->
        <TextView
            android:id="@+id/date_pointTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5mdp"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/_9font_mdp"
            android:textColor="@color/Cultured"
            app:layout_constraintStart_toStartOf="@id/title_pointTxt"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2020-03-03" />

        <!--Title-->
        <TextView
            android:id="@+id/title_pointTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_10mdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_13font_mdp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/date_pointTxt"
            tools:text="سلام" />


        <!--content-->
        <TextView
            android:id="@+id/content_pointTxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50mdp"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/_2mdp"
            android:maxLines="4"
            android:paddingHorizontal="@dimen/_12mdp"
            android:textColor="@color/white"
            android:lineSpacingExtra="@dimen/_2mdp"
            android:textSize="@dimen/_9mdp"
            android:textAlignment="inherit"
            app:layout_constraintTop_toBottomOf="@id/title_pointTxt"
            tools:text="This is a long text that should be truncated if it exceeds the available space.
This is a long text that should be truncated if it exceeds the available space.
This is a long text that should be truncated if it exceeds the available space." />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30mdp"
            android:alpha="0.5"
            android:background="@drawable/bg_view_gradient"
            app:layout_constraintBottom_toBottomOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>